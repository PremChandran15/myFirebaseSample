<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schoolofskills.myfirebasesample.ChecklistSelectorActivity"
    android:background="@drawable/background"
    >

    <ImageView
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rlde2"
        android:alpha="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the inspection you want."
        android:id="@+id/checklistSelectTextView"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:singleLine="false"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/checklistSelectTextView"
        android:text="Electrical Inspection 1"
        android:id="@+id/buttonInspection1"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonInspection1"
        android:text="Electrical Inspection 2"
        android:id="@+id/buttonInspection2"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonInspection2"
        android:text="HSE Inspection"
        android:id="@+id/buttonHseInspection"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Putra Heights"
        android:id="@+id/textViewLocation"
        android:layout_below="@+id/buttonHseInspection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

    <!--new USername-->



</RelativeLayout>
