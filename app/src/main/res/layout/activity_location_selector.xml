<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schoolofskills.myfirebasesample.LocationSelectorActivity"
    android:background="@drawable/background"
    >


    <ImageView
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/rlde2"
        android:alpha="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the Location you want."
        android:id="@+id/locationSelectTextView"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:singleLine="false"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationSelectTextView"
        android:text="Location1"
        android:id="@+id/buttonLocation1"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLocation1"
        android:text="Location2"
        android:id="@+id/buttonLocation2"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLocation2"
        android:text="Location3"
        android:id="@+id/buttonLocation3"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLocation3"
        android:text="Location4"
        android:id="@+id/buttonLocation4"
        android:layout_centerVertical="true"
        android:background="#1d37cc"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
